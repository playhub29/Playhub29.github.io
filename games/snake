<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Snake</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
body {
  margin: 0;
  background: #111;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  font-family: Arial, sans-serif;
}

#top {
  margin-bottom: 10px;
}

canvas {
  background: #000;
  border: 2px solid #444;
}

button {
  margin-top: 10px;
  padding: 8px 14px;
  border: none;
  border-radius: 6px;
  background: #22c55e;
  color: black;
  font-weight: bold;
}
</style>
</head>
<body>

<h1>Snake</h1>
<div id="top">Score: <span id="score">0</span></div>
<canvas id="game" width="300" height="300"></canvas>
<button onclick="restart()">Restart</button>

<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");
const scoreEl = document.getElementById("score");

let snake, food, dx, dy, score;

function start() {
  snake = [{x:150,y:150}];
  food = spawnFood();
  dx = 10;
  dy = 0;
  score = 0;
  scoreEl.textContent = score;
}

function spawnFood() {
  return {
    x: Math.floor(Math.random()*30)*10,
    y: Math.floor(Math.random()*30)*10
  };
}

function draw() {
  ctx.fillStyle = "#000";
  ctx.fillRect(0,0,300,300);

  ctx.fillStyle = "red";
  ctx.fillRect(food.x, food.y, 10, 10);

  ctx.fillStyle = "#22c55e";
  snake.forEach(p => ctx.fillRect(p.x, p.y, 10, 10));
}

function move() {
  const head = {x: snake[0].x + dx, y: snake[0].y + dy};

  if (head.x < 0 || head.y < 0 || head.x >= 300 || head.y >= 300 ||
      snake.some(p => p.x === head.x && p.y === head.y)) {
    alert("Game Over");
    start();
    return;
  }

  snake.unshift(head);

  if (head.x === food.x && head.y === food.y) {
    score++;
    scoreEl.textContent = score;
    food = spawnFood();
  } else {
    snake.pop();
  }
}

document.addEventListener("keydown", e => {
  if (e.key === "ArrowUp" && dy === 0) {dx=0;dy=-10;}
  if (e.key === "ArrowDown" && dy === 0) {dx=0;dy=10;}
  if (e.key === "ArrowLeft" && dx === 0) {dx=-10;dy=0;}
  if (e.key === "ArrowRight" && dx === 0) {dx=10;dy=0;}
});

function loop() {
  move();
  draw();
}

function restart() {
  start();
}

start();
setInterval(loop, 100);
</script>

</body>
</html>
