<body tabindex="0">

<div id="top">
  <button onclick="location.href='/'">üè† Home</button>
  <div>Score: <span id="score">0</span></div>
  <button onclick="restart()">Restart</button>
</div>

<canvas id="game" width="300" height="300"></canvas>

<!-- Mobile Controls -->
<div id="controls">
  <div></div>
  <button onclick="setDir(0,-10)">‚¨ÜÔ∏è</button>
  <div></div>
  <button onclick="setDir(-10,0)">‚¨ÖÔ∏è</button>
  <button onclick="setDir(10,0)">‚û°Ô∏è</button>
  <button onclick="setDir(0,10)">‚¨áÔ∏è</button>
</div>

<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");
const scoreEl = document.getElementById("score");

let snake, food, dx, dy, score, loop;

function start() {
  snake = [{x:150,y:150}];
  food = spawnFood();
  dx = 10; dy = 0;
  score = 0;
  scoreEl.textContent = score;
}

function spawnFood() {
  return {
    x: Math.floor(Math.random()*30)*10,
    y: Math.floor(Math.random()*30)*10
  };
}

function draw() {
  ctx.fillStyle = "#000";
  ctx.fillRect(0,0,300,300);

  ctx.fillStyle = "red";
  ctx.fillRect(food.x, food.y, 10, 10);

  ctx.fillStyle = "#22c55e";
  snake.forEach(p => ctx.fillRect(p.x, p.y, 10, 10));
}

function move() {
  const head = {x: snake[0].x + dx, y: snake[0].y + dy};

  if (
    head.x < 0 || head.y < 0 ||
    head.x >= 300 || head.y >= 300 ||
    snake.some(p => p.x === head.x && p.y === head.y)
  ) {
    restart();
    return;
  }

  snake.unshift(head);

  if (head.x === food.x && head.y === food.y) {
    score++;
    scoreEl.textContent = score;
    food = spawnFood();
  } else {
    snake.pop();
  }
}

function setDir(x,y) {
  if (dx === -x && dy === -y) return;
  dx = x; dy = y;
}

window.addEventListener("keydown", e => {
  if (e.key === "ArrowUp") setDir(0,-10);
  if (e.key === "ArrowDown") setDir(0,10);
  if (e.key === "ArrowLeft") setDir(-10,0);
  if (e.key === "ArrowRight") setDir(10,0);
});

function restart() {
  clearInterval(loop);
  start();
  loop = setInterval(() => {
    move();
    draw();
  }, 100);
}

restart();
</script>

</body>
</html>
